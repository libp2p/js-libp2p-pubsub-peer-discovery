{
  "name": "@libp2p/pubsub-peer-discovery",
  "version": "4.0.0",
  "description": "A libp2p module that uses pubsub for mdns like peer discovery",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/libp2p/js-libp2p-pubsub-peer-discovery#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/libp2p/js-libp2p-pubsub-peer-discovery.git"
  },
  "bugs": {
    "url": "https://github.com/libp2p/js-libp2p-pubsub-peer-discovery/issues"
  },
  "keywords": [
    "discovery",
    "libp2p",
    "peer",
    "pubsub"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist/src",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js"
    }
  },
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "src/peer.d.ts",
      "src/peer.js"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "lint": "aegir lint",
    "dep-check": "aegir dep-check dist/src/**/*.js dist/test/**/*.js",
    "build": "tsc",
    "postbuild": "cp src/peer.js dist/src",
    "generate:proto": "pbjs -t static-module -w es6 -r libp2p-pubsub-discovery --force-number --no-verify --no-delimited --no-create --no-beautify --no-defaults --lint eslint-disable -o src/peer.js ./src/peer.proto",
    "generate:proto-types": "pbts -o src/peer.d.ts src/peer.js",
    "pretest": "npm run build",
    "test": "aegir test -f \"./dist/test/**/*.spec.js\"",
    "test:node": "npm run test -- -t node -f ./dist/test/node.js",
    "test:chrome": "npm run test -- -t browser -f ./dist/test/browser.js ",
    "test:firefox": "npm run test -- -t browser -- --browser firefox -f ./dist/test/browser.js",
    "release": "semantic-release"
  },
  "dependencies": {
    "@libp2p/interfaces": "^1.3.17",
    "@libp2p/logger": "^1.1.2",
    "@libp2p/peer-id": "^1.1.8",
    "@multiformats/multiaddr": "^10.1.7",
    "protobufjs": "^6.11.2"
  },
  "devDependencies": {
    "@libp2p/interface-compliance-tests": "^1.1.18",
    "@libp2p/peer-id-factory": "^1.0.8",
    "aegir": "^36.2.3",
    "p-defer": "^4.0.0",
    "p-wait-for": "^4.1.0",
    "sinon": "^13.0.1",
    "ts-sinon": "^2.0.2"
  }
}
